<div class='contenido-principal'>

<h1>Galería</h1>

{{#each}}

  <div class='galeria-juego'>
    <div class='galeria-juego-acciones'><button {{action "eliminar" this}} class='btn btn-danger btn-xs'><i class='fa fa-trash'></i></button></div>
    <div class='galeria-juego-preview' {{action "abrir" this}}><img {{bindAttr src=imagen}}></div>
    <div class='galeria-juego-titulo'>{{nombre}}</div>
  </div>

{{else}}
  Parece que no hay ningún juego creado...
{{/each}}

{{outlet}}

</div>
